.former_role
  - new_or_existing = former_role.new_record? ? 'new' : 'existing'
  - prefix = "appointee[#{new_or_existing}_former_role_attributes][]"
  - fields_for prefix, former_role do |f|
    %p
      Former role:
      = label :former_role, :title, 'Title:'
      = f.text_field :title
      = label :former_role, :department_name, 'Department:'
      = f.text_field :department_name
      = label :former_role, :leaving_service_date_text, 'Leaving service:'
      = f.text_field :leaving_service_date_text
      = link_to_function "delete" , "$(this).up('.former_role').remove()"

