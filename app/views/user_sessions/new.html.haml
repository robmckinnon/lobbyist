- @title = 'Admin Login'
- @crumbtrail = 'Admin'
- form_for @user_session, :url => user_session_path do |f|
  .form_field
    = rm_errors_div f.label(:login, 'User name')
    = rm_errors_div f.text_field(:login)
  .form_field
    = rm_errors_div f.label(:password)
    = rm_errors_div f.password_field(:password)
  .form_field
    = f.check_box :remember_me
    = f.label :remember_me, "Remember me", {:class=>'checkbox_label'}
  %p
    = f.submit "Login"

%p
  = link_to 'Forgot your password?', new_password_reset_path
