%html{:lang=>"en-GB"}
  %head
    %title= @title ? "#{@title} | WhosLobbying.com" : "WhosLobbying.com"
    = javascript_include_tag :defaults
    %script{:type=>'javascript'}
      = 'textarea {align:bottom;}'
    %style{ :type=>"text/css" }
      fieldset { margin: 1em; }
      p.indent { margin-left: 2em; }
      div.fieldWithErrors input,
      div.fieldWithErrors textarea { border: solid 1px #cc0000; background-color: #ffcccc; }
      span.note { font-size: 0.7em; }
      label { width: 9em; float: left; text-align: right; margin-right: 0.5em; display: block; }
      div.appointment,
      div.former_role,
      div.consultancy_client,
      div.monitoring_client,
      div.consultancy_staff_member { margin-bottom: 3em; }
  %body
    #header
      %h1= @title || "WhosLobbying.com"
    #menu
      %p
        = link_to 'People', people_path
        |
        = link_to 'Appointees', appointees_path
        |
        = link_to 'Data sources', data_sources_path
        |
        = link_to 'Organisations', organisations_path
        |
        = link_to 'Register entries', register_entries_path
    #content
      - if flash[:notice]
        %p
          %em= flash[:notice]
      = yield
    #footer
      %p
        = link_to 'People', people_path
        |
        = link_to 'Appointees', appointees_path
        |
        = link_to 'Data sources', data_sources_path
        |
        = link_to 'Organisations', organisations_path
        |
        = link_to 'Register entries', register_entries_path
    - if RAILS_ENV == 'production'
      #analytics
        = %Q[<script type="text/javascript">]
        = %Q[var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");]
        = %Q[document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));]
        = %Q[</script>]
        = %Q[<script type="text/javascript">]
        = %Q[try {]
        = %Q[var pageTracker = _gat._getTracker("UA-7723073-1");]
        = %Q[pageTracker._trackPageview();]
        = %Q[} catch(err) {}</script>]
