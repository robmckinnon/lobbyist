%html{:lang=>"en-GB"}
  %head
    %title= @title ? "#{@title} | WhosLobbying.com" : "WhosLobbying.com"
    = javascript_include_tag :defaults
    %script{:type=>'javascript'}
      = 'textarea {align:bottom;}'
    %style{ :type=>"text/css" }
      fieldset { margin: 1em; }
      p.indent { margin-left: 2em; }
      div.fieldWithErrors input,
      div.fieldWithErrors textarea { border: solid 1px #cc0000; background-color: #ffcccc; }
      span.note { font-size: 0.7em; }
      label { width: 9em; float: left; text-align: right; margin-right: 0.5em; display: block; }
      div.appointment,
      div.former_role { margin-bottom: 3em; }
  %body
    #header
      %h1= @title || "WhosLobbying.com"
    #content
      - if flash[:notice]
        %p
          %em= flash[:notice]
      = yield
    #footer
      %p
        = link_to 'People', people_path
        |
        = link_to 'Appointees', appointees_path
        |
        = link_to 'Data sources', data_sources_path
        |
        = link_to 'Organisations', organisations_path
